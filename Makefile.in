CC			= @CC@
CFLAGS		= -Wall -D_XOPEN_SOURCE=500 @CFLAGS@
prefix 		= @prefix@
exec_prefix = @exec_prefix@
bindir		= @bindir@
PROGNAME	= gzinject
LDFLAGS		= -s @LDFLAGS@
SRC			= *.c

.PHONY		: all install clean distclean

all			: $(PROGNAME)

clean		:
	rm -f $(PROGNAME)

distclean	:
	rm -f Makefile

install		:
	install -p -D --target-directory=$(bindir) $(PROGNAME)

$(PROGNAME) : $(SRC)
	$(CC) $(CFLAGS) $(LDFLAGS) $^ -o $@
