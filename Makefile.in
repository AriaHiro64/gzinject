CC		= @CC@
LD		= @CC@
EMBEDDED_GZI   ?= 
INSTALL		= @INSTALL@
CFLAGS		= -Wall -Wno-unused-result @CFLAGS@
ifeq ($(EMBEDDED_GZI),)
CPPFLAGS		=
else
CPPFLAGS		= -DEMBEDDED_GZI="$(EMBEDDED_GZI)"
endif 
prefix 		= @prefix@
exec_prefix 	= @exec_prefix@
bindir		= @bindir@
PROGNAME	= gzinject
LDFLAGS		= -s @LDFLAGS@
CFILES		= *.c
SRCDIR		= src
CSRC	   	:= $(foreach s,$(CFILES),$(wildcard $(SRCDIR)/$(s)))
COBJ		= $(patsubst $(SRCDIR)/%,$(OBJDIR)/%.o,$(CSRC))
LIBS		= 
OBJDIR		= obj
OUTDIR		= $(OBJDIR)

.PHONY		: all install clean distclean

all		:	$(PROGNAME)

clean		:
	rm -rf $(PROGNAME) obj

distclean	:	clean
	rm -f Makefile

install		:	$(PROGNAME)
	$(INSTALL) -p -D --target-directory=$(bindir) $(PROGNAME)

$(PROGNAME)	:	$(COBJ)
	$(LD) $(LDFLAGS) $^ -o $@ $(LIBS) 

$(OUTDIR)   	:
	mkdir -p $@

$(COBJ)	 	:	$(OBJDIR)/%.o: $(SRCDIR)/% | $(OBJDIR)
	$(CC) -c $(CPPFLAGS) $(CFLAGS) $< -o $@