CC			= @CC@
CFLAGS		= -Wall -Wno-unused-result @CFLAGS@
prefix 		= @prefix@
exec_prefix = @exec_prefix@
bindir		= @bindir@
PROGNAME	= gzinject
LDFLAGS		= -s @LDFLAGS@
SRC			= gzinject.c
LIBS		= -lcrypto -lgdi32

.PHONY		: all install clean distclean

all			: $(PROGNAME)

clean		:
	rm -f $(PROGNAME)

distclean	: clean
	rm -f Makefile

install		:
	install -p -D --target-directory=$(bindir) $(PROGNAME)

$(PROGNAME) : $(SRC)
	$(CC) $(CFLAGS) $(LDFLAGS) $^ $(LIBS) -o $@
